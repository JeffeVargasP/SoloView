generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  name      String
  password  String
  city      String?
  property  String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Espressif Espressif[]
}

model Sensor {
  id          Int       @id @default(autoincrement())
  espressifId Int
  espressif   Espressif @relation(fields: [espressifId], references: [id])
  temperature Float
  humidity    Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      Int?
}

model Espressif {
  id        Int      @id @default(autoincrement())
  sensor    Sensor[]
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
